<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/logoBar"
        android:paddingTop="@dimen/activity_vertical_large_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:alpha="1.0"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/ivLogoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#00000000"
            android:layout_below="@+id/ivLogo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_text" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoBar"
        android:id="@+id/home_text"
        android:gravity="center"
        android:paddingTop="@dimen/activity_vertical_large_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:id="@+id/home_home_text"
            android:textSize="17sp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="@dimen/spacing_small"
            android:text="@string/app_main_text"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_buttons"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="@string/get_started"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btGetStarted"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
