    <!-- TEXT STYLES -->
    <style name="QTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/titleCellColor</item>
    </style>

    <style name="QTitleMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/titleCellColor</item>
    </style>

    <style name="QTitleWhite" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="QTitleMediumWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="QTitleLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/titleCellColor</item>
    </style>

    <style name="QTitleLargeWhite" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="QTitlePrimary" parent="QTitle">
        <item name="android:textColor">@color/my_primary_900</item>
    </style>

    <style name="QTitleItalic" parent="QTitle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="QTitleMediumPrimary" parent="QTitleMedium">
        <item name="android:textColor">@color/my_primary_900</item>
    </style>

    <style name="QTitleLight" parent="QTitle">
        <item name="android:textColor">@color/titleCellColorLight</item>
    </style>

    <style name="QTitleMain" parent="QTitleMedium">
        <item name="android:textColor">@color/my_accent_400</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QTitleLightMedium" parent="QTitleMedium">
        <item name="android:textColor">@color/titleCellColorLight</item>
    </style>


    <style name="QText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/valueCellColor</item>
        <item name="android:textColorHint">@color/valueHintColor</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="QTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/valueCellColor</item>
        <item name="android:textColorHint">@color/valueHintColor</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="QTextLight" parent="QText">
        <item name="android:textColor">@color/valueCellColorLight</item>
    </style>

    <style name="QTextLightMedium" parent="QTextMedium">
        <item name="android:textColor">@color/valueCellColorLight</item>
    </style>

    <!-- END TEXT STYLES -->




    <style name="checkBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/my_primary_50</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/my_accent_50</item>
    </style>

    <!--Toolbar customization-->
    <style name="MyToolbarStyle" parent="AppTheme.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/MyPopupTheme</item>
        <!-- No need for colorPrimary, colorPrimaryDark, colorAccent here
             this should go to the AppTheme -->
    </style>
    <!--End Toolbar customization-->

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/working_text</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">4</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="MyPopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:colorBackground">@color/my_primary_400</item>
    </style>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/my_primary_600</item>
    </style>

    <style name="blinkText" parent="normalText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <string name="working_text">Working...</string>
</resources>
